		ga.getXMLAnswer(function(answer) {
			try {
				answer = JSON.parse(answer);
				if (answer.data) {
					g_form.setValue("code", answer.data);
					g_form.setReadOnly("code", true);
				}
			} catch (ex) {
				alert("A network error ocurred ");
			}
		});
    }
	
}]]></script>
